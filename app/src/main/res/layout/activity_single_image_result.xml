<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#424242"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="PopChips Original"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_margin="12dp"
            android:textColor="#424242"
            android:layout_gravity="center"
            android:text="* Natritional Information (Per 100g)   "
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="150dp">


        <ImageView
            android:id="@+id/image_database"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:src="@drawable/walkers_salted">
        </ImageView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/et1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="15sp"
            android:focusable="false"
            android:longClickable="false"
            android:clickable="false"
            android:backgroundTint="#BDBDBD"
            android:text="Energy: 153kJ / 572kCal"
            />
        <EditText
            android:id="@+id/et2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:focusable="false"
            android:textSize="15sp"
            android:longClickable="false"
            android:clickable="false"
            android:backgroundTint="#BDBDBD"
            android:text="Fat:12g ,of which saturates:13g "
            />
        <EditText
            android:id="@+id/et3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:focusable="false"
            android:textSize="15sp"
            android:longClickable="false"
            android:clickable="false"
            android:backgroundTint="#BDBDBD"
            android:text="Carbojydrates: 14g ,of which sugars: 15g"
            />
        <EditText
            android:id="@+id/et4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:focusable="false"
            android:longClickable="false"
            android:textSize="15sp"
            android:clickable="false"
            android:backgroundTint="#BDBDBD"
            android:text="Protein: 16g"
            />

        <EditText
            android:id="@+id/et5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="15sp"
            android:focusable="false"
            android:longClickable="false"
            android:clickable="false"
            android:backgroundTint="#BDBDBD"
            android:text="Salt: 17g"
            />



    </LinearLayout>



</LinearLayout>